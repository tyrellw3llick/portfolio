---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import SectionContainer from '../components/SectionContainer.astro';

interface Props {
	post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, image, tags } = post.data;

const displayDate = new Date(pubDate).toLocaleDateString('en-US', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});

const pageDescription = description || 'Read this blog post';
---
<BaseLayout title={`${title} - Blog`}>
	<main class="px-4 flex flex-col items-center justify-center">
		<SectionContainer class="py-12 md:py-20">
			<article class="prose prose-invert lg:prose-xl max-w-3xl mx-auto">
				<header class="mb-8 not-prose">
					<h1 class="text-3xl md:text-4xl font-bold mb-2 text-neutral-100">{title}</h1>
					<p class="text-neutral-400 text-sm">
						Published on <time datetime={pubDate.toISOString()}>{displayDate}</time>
					</p>
					{tags && tags.length > 0 && (
						<div class="mt-4 flex flex-wrap gap-2">
							{tags.map((tag: string) => (
								<a href={`/blog?tag=${encodeURIComponent(tag)}`} class="text-xs bg-neutral-700/50 hover:bg-neutral-600/50 text-neutral-300 px-2 py-1 rounded no-underline transition-colors duration-150">
									#{tag}
								</a>
							))}
						</div>
					)}
				</header>

				{image && (
					<div class="not-prose my-8"> 
						<img
							src={image.src}
							alt={image.alt}
							class="w-full h-auto rounded-md shadow-lg"
							width="768"
							height="432" 
						/>
					</div>
				)}

				<hr class="border-neutral-700 my-8 not-prose" /> 

				<div class="
					prose-a:text-[var(--accent-color-blue)] 
					hover:prose-a:text-[var(--accent-color-yellow)] 
					prose-a:transition-colors prose-a:duration-150
					prose-code:text-yellow-300 
					prose-blockquote:border-l-[var(--accent-color-blue)]
					prose-pre:bg-neutral-800/80 /* Slightly transparent pre background */
				">
					<slot />
				</div>
			</article>
		</SectionContainer>
	</main>
</BaseLayout>
